<% if @rental.scheduled? %>
  <%= form_with model: @rental, url: start_rental_path, method: :post  do |f| %>
    <%= f.label :car_id, 'Carro' %>
    <%= f.collection_select :car_id, @cars, :id, :name %>
    <%= f.submit 'Iniciar Locação' %>
    <% end %>

<% end %>
